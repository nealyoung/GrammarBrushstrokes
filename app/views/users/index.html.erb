<h1>Listing Students</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Responses</th>
      <th>Reviews</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>		
      <tr>
        <td><%= link_to user.full_name, url_for(user) %></td>
        <td><%= user.responses.size %></td>
        <td>number of reviews</td>
      </tr>
    <% end %>
  </tbody>
</table>
