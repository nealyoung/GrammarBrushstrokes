<span class="section-header"><%= @user.full_name %></span>

<hr>

<h3>Responses</h3>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-6">
      <h4><%= category.title %></h4>
      <div class="well well-sm text-left">
        <% category_responses = @user.responses.where(category_id:  category.id).completed %>
        
        <% if category_responses.any? %>
          <% category_responses.each do |response| %>
            <ul class="list-group">
              <%= image_tag response.question.image_url, class: 'img-thumbnail center-div' %>
              
              <ul class="list-group">
                <li class="list-group-item">
                  <span class="badge">Sentence A</span>
                  <%= response.sentence1 %>
                </li>
                <li class="list-group-item">
                  <span class="badge">Sentence A Revised</span>
                  <%= response.revised_sentence1 %>
                </li>
              </ul>
              
              <ul class="list-group">
                <li class="list-group-item">
                  <span class="badge">Sentence B</span>
                  <%= response.sentence2 %>
                </li>
                <li class="list-group-item">
                  <span class="badge">Sentence B Revised</span>
                  <%= response.revised_sentence2 %>
                </li>
              </ul>
              
              <ul class="list-group">
                <li class="list-group-item">
                  <span class="badge">Sentence C</span>
                  <%= response.sentence3 %>
                </li>
                <li class="list-group-item">
                  <span class="badge">Sentence C Revised</span>
                  <%= response.revised_sentence3 %>
                </li>
              </ul>
            </ul>
          <% end %>
        <% else %>
          No responses in category
        <% end %>
      </div>
    </div>
  <% end %>
</div>
