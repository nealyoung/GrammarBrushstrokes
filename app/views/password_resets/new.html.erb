<%= form_tag password_resets_path, :method => :post do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>

    <div class="actions">
      <%= submit_tag "Reset Password", :class => 'btn btn-lg btn-default' %>
    </div>

<% end %>