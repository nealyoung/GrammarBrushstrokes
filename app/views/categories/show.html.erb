<span class="section-header"><%= @category.title %></span>

<hr>

<p><%= @category.description %></p>

<%= image_tag @category.image_url %>

<div class="panel panel-success">
  <div class="panel-heading">
    Good Example
  </div>
  
  <div class="panel-body">
    <%= @category.good_example %>
  </div>
</div>

<div class="panel panel-danger">
  <div class="panel-heading">
    Bad Example
  </div>
  
  <div class="panel-body">
    <%= @category.bad_example %>
  </div>
</div>

<div>
  <%= link_to 'Try it!', new_response_path(category_id: @category.id), class: 'btn btn-lg btn-success' %>
</div>
