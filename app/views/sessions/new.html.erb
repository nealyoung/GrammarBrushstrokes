<% content_for :title do %>Login
<% end %>

<%= form_tag validate_user_path do %>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username], class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= check_box_tag :remember_me, 1, params[:remember_me]%>
      <%= label_tag :remember_me %>
    </div>
    <%= submit_tag "Log In", :class => 'btn btn-default' %>
    <span class="pull-right" id="sign-up-link">
        Need an account? <%= link_to "Sign up", new_user_path %>
      </span>
    <br>
    <span class="pull-right" id="forgot_password">
        <%= link_to "Forgotten password?", new_password_reset_path %>
      </span>
    <br>
<% end %>
