<h1><%= @response.question.category.title %> Exercise</h1>
<p>Find me in app/views/responses/new.html.erb</p>

  <%= form_for @response do |f| %>
  <% if @response.errors.any? %>
    <div class="alert">
      <h4><%= pluralize @response.errors.count, 'Error' %></h4>
      <ul>
        <% @response.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Sentence 1' %>
    <%= f.text_field :sentence1, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label 'Sentence 2' %>
    <%= f.text_field :sentence2, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label 'Sentence 3' %>
    <%= f.text_field :sentence3, class: 'form-control' %>
  </div>
  
  <%= f.submit 'Submit', :class => 'btn btn-default' %>
<% end %>